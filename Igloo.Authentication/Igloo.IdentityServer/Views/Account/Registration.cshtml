@model RegistrationViewModel



    <div class="page-header">
        <h1>Registration</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Local Registration</h3>
                </div>
                <div class="panel-body">

                    <form method="post" asp-controller="Registration" asp-action="Register">

                        @Html.HiddenFor(x => x.ReturnUrl)

                        <fieldset>

                            <div class="form-group">
                                <label asp-for="Login"></label>
                                <input class="form-control" asp-for="Login" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input class="form-control" asp-for="Password" />
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input class="form-control" asp-for="ConfirmPassword" />
                            </div>

                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input class="form-control" asp-for="UserName" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" asp-for="Email" />
                            </div>

                            <div class="form-group">
                                <button asp-action="Register" class="btn btn-primary" name="button">Register</button>
                                <button asp-action="Cancel" class="btn btn-default" name="button">Cancel</button>
                            </div>

                        </fieldset>

                    </form>
                </div>
            </div>
        </div>
    </div>